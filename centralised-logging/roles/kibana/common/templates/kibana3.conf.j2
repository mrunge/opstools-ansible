<VirtualHost *:{{ http_port }}>

   DocumentRoot /usr/share/kibana
   <Directory /usr/share/kibana>
     Require all granted
     Options -Multiviews
   </Directory>

   # Proxy for _aliases and .*/_search
   <LocationMatch "^/(_nodes|_aliases|.*/_aliases|_search|.*/_search|_mapping|.*/_mapping)$">
     ProxyPassMatch http://{{ elasticsearch_server }}:{{ elsasticsearch_por }}/$1
     ProxyPassReverse http://{{ elasticsearch_server }}:{{ elsasticsearch_por }}/$1
   </LocationMatch>

   # Proxy for kibana-int/{dashboard,temp}
   <LocationMatch "^/(kibana-int/dashboard/|kibana-int/temp)(.*)$">
     ProxyPassMatch http://{{ elasticsearch_server }}:{{ elsasticsearch_por }}/$1$2
     ProxyPassReverse http://{{ elasticsearch_server }}:{{ elsasticsearch_por }}/$1$2
   </LocationMatch>

 </VirtualHost>

